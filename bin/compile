#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

set -e
set -o pipefail

BUILD_DIR=$1
CACHE_DIR=$2

cd $BUILD_DIR

cd vendor/cmake/cmake-3.9.1
./configure
ls
export PATH=$PATH:vendor/cmake/cmake-3.9.1/bin
echo $PATH
suo cp bin/cmake /usr/local/bin/cmake

cd $BUILD_DIR
# configure
#if [ -f $1/prepare.py ]; then
#  echo "-----> Configuring"
#  ./prepare.py
#fi

# make
echo "-----> Compiling with Make"
make -C WORK/flexisip/cmake
